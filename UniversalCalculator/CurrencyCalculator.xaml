<Page x:Name="CurrencyCalculator"
    x:Class="Calculator.CurrencyCalculator1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	Background="LightBlue">
	    

	<Grid RenderTransformOrigin="0.476,0.556">
		<TextBlock x:Name="currencyConversionCalculatorTextBlock" HorizontalAlignment="Center" FontSize="70" FontWeight="Bold" Margin="0,78,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="119" Width="1496"><Run Text="Currency Conversion Calculator"/><LineBreak/><Run/></TextBlock>
		<TextBlock x:Name="amountTextBlock" HorizontalAlignment="Left" FontSize="50" Margin="35,236,0,0" Text="Amount $" TextWrapping="Wrap" VerticalAlignment="Top" Height="86" Width="385"/>
		<TextBlock x:Name="fromTextBlock" HorizontalAlignment="Left" FontSize="50" Margin="518,236,0,0" Text="From" TextWrapping="Wrap" VerticalAlignment="Top" Height="86" Width="385"/>
		<TextBlock x:Name="toTextBlock" HorizontalAlignment="Left" FontSize="50" Margin="1034,236,0,0" Text="To" TextWrapping="Wrap" VerticalAlignment="Top" Height="86" Width="385"/>
		<TextBox x:Name="amountTextBox" HorizontalAlignment="Left" FontSize="25" Margin="35,351,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="395" TextChanged="InputTextBox_TextChanged"/>
		<ComboBox x:Name="fromComboBox" Margin="518,351,0,0" FontSize="25" Width="395" Height="50" SelectedIndex="0" SelectionChanged="FromComboBox_SelectionChanged" SelectedValuePath="Text" PlaceholderText="Select Currency">
					<!-- USD -->
					<ComboBoxItem Tag="USD">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="USD - US Dollar" VerticalAlignment="Center" Margin="5,0"/>
							<Image Source="USA1.png" Width="24" Height="24" Margin="5,0" HorizontalAlignment="right" />							
						</StackPanel>
					</ComboBoxItem>

					<!-- EUR -->
					<ComboBoxItem Tag="EUR">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="EUR - Euro" VerticalAlignment="Center" Margin="5,0"/>
							<Image Source="EUR1.png" Width="24" Height="24" Margin="5,0"/>
						</StackPanel>
					</ComboBoxItem>

					<!-- GBP -->
						<ComboBoxItem Tag="GBP">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="GBP - British Pound" VerticalAlignment="Center" Margin="5,0"/>
							<Image Source="UK1.png" Width="24" Height="24" Margin="5,0"/>
						</StackPanel>
					</ComboBoxItem>

					<!-- RUP -->	
					<ComboBoxItem Tag="RUP">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="RUP - Indian Rupee" VerticalAlignment="Center" Margin="5,0"/>
							<Image Source="INDIA.png" Width="24" Height="24" Margin="5,0"/>
						</StackPanel>
					</ComboBoxItem>
				</ComboBox>

		<ComboBox x:Name="toComboBox" Margin="1034,345,0,0" FontSize="25" Width="395" Height="50" HorizontalContentAlignment="Stretch" SelectedIndex="3" SelectedValuePath="Text" SelectionChanged="ToComboBox_SelectionChanged" PlaceholderText="Select Currency">
			<!-- USD -->
			<ComboBoxItem Tag="USD">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="USD - US Dollar" VerticalAlignment="Center" Margin="5,0"/>
					<Image Source="USA1.png" Width="24" Height="24" Margin="5,0"/>
				</StackPanel>
			</ComboBoxItem>

			<!-- EUR -->
			<ComboBoxItem Tag="EUR">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="EUR - Euro" VerticalAlignment="Center" Margin="5,0"/>
					<Image Source="EUR1.png" Width="24" Height="24" Margin="5,0"/>
				</StackPanel>
			</ComboBoxItem>

			<!-- GBP -->
			<ComboBoxItem Tag="GBP">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="GBP - British Pound" VerticalAlignment="Center" Margin="5,0"/>
					<Image Source="UK1.png" Width="24" Height="24" Margin="5,0"/>
				</StackPanel>
			</ComboBoxItem>

			<!-- RUP -->
			<ComboBoxItem Tag="RUP">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="RUP - Indian Rupee" VerticalAlignment="Center" Margin="5,0"/>
					<Image Source="INDIA.png" Width="24" Height="24" Margin="5,0"/>
				</StackPanel>
			</ComboBoxItem>
		</ComboBox>

		<Button x:Name="calculateCurrencyButton" Content="Calculate Currency" Background="Orange" FontSize="25" Margin="518,792,0,0" VerticalAlignment="Top" Width="395" Height="73" Click="CalculateCurrencyButton_Click"/>
		<Button x:Name="exitButton" Content="Exit" Background="Orange" FontSize="25" Margin="518,891,0,0" VerticalAlignment="Top" Width="395" Height="73" Click="ExitButton_Click_1"/>
		<TextBox x:Name="amountToConvertTextBox" HorizontalAlignment="Left" FontSize="35" Margin="35,0,0,0" Text=""  TextWrapping="Wrap" VerticalAlignment="Center" RenderTransformOrigin="0.056,-0.417" TextChanged="amountToConvertTextBox_TextChanged" Visibility="Visible"/>
		<TextBox x:Name="resultTextBox" HorizontalAlignment="Left" FontSize="35" FontWeight="Bold"  Margin="35,581,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.056,-0.417" TextChanged="resultTextBox_TextChanged" Visibility="Visible"/>
		<TextBox x:Name="fromToConversionTextBox" HorizontalAlignment="Left" FontSize="25" Margin="33,692,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Visibility="Visible" TextChanged="fromToConversionTextBox_TextChanged"/>
		<TextBox x:Name="toFromConversionTextBox" HorizontalAlignment="Left" FontSize="25" Margin="33,792,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Visibility="Visible" TextChanged="toFromConversionTextBox_TextChanged"/>
        



    </Grid>
</Page>
