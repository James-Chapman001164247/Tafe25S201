<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightBlue">


    <Grid>
        <Image Source="abacus.jpg"  HorizontalAlignment="Left" Height="195" Margin="1180,63,0,0" VerticalAlignment="Top" Width="240"/>
        <TextBlock HorizontalAlignment="Left" FontSize="80" FontWeight="Bold" Margin="375,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="177" Width="901" SelectionChanged="TextBlock_SelectionChanged"><Run Text="Universal Calculator"/><LineBreak/><Run/></TextBlock>
        <Button Content="Math Calculator" Name="mathsCalculatorButton" Background="Orange" FontSize="60" Height="115" Margin="0,288,0,0" VerticalAlignment="Top" Width="595" HorizontalAlignment="Center" Click="mathsCalculatorButton_Click"/>
        <Button Content="Currency Calculator" Name="currencyConverterButton" Background="Orange" FontSize="60" Height="115" Margin="0,566,0,0" VerticalAlignment="Top" Width="595" HorizontalAlignment="Center" Click="currencyConverterButton_Click"/>
        <Button Content="Mortgage Calculator" Name="mortgageCalulatorButton" Background="Orange" FontSize="60" Height="115" Margin="0,431,0,0" VerticalAlignment="Top" Width="595" HorizontalAlignment="Center" Click="mortgageCalulatorButton_Click"/>
        <Button Content="Exit" FontSize="60" Name="exitButton" Background="Orange" Height="115" Margin="0,853,0,0" VerticalAlignment="Top" Width="595" HorizontalAlignment="Center" Click="exitButton_Click"/>
		<Button Content="Trip Calculator" x:Name="tripCalculator" Background="Orange" FontSize="60" Height="115" Margin="0,705,0,0" VerticalAlignment="Top" Width="595" HorizontalAlignment="Center" Click="tripCalculator_Click"/>
        <!---->

    </Grid>
</Page>
