<Page
    x:Class="Calculator.mortageCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightBlue">

    <Grid>
        <TextBlock HorizontalAlignment="Left" FontSize="80" FontWeight="Bold" Margin="361,39,0,0" Text="Mortgage Calculator" TextWrapping="Wrap" VerticalAlignment="Top" Height="200" Width="870"/>
        <TextBlock HorizontalAlignment="Left" FontSize="60" Height="85" Margin="239,250,0,0" Text="Principal borrowed: $" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" FontSize="60" Height="85" Margin="663,335,0,0" Text="Years" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" FontSize="60" Height="85" Margin="596,415,0,0" Text="Months" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" FontSize="60" Height="85" Margin="185,495,0,0" Text="Annual Interest Rate: %" TextWrapping="Wrap" VerticalAlignment="Top" Width="653" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" FontSize="60" Height="85" Margin="216,580,0,0" Text="Monthly Interest Rate:" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" FontSize="60" Height="85" Margin="253,665,0,0" Text="Monthly Repayment:" TextWrapping="Wrap" VerticalAlignment="Top" Width="550" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBox HorizontalAlignment="Left" FontSize="40" Name="principalBorrowTextBox" Height="65" Margin="825,265,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
		<TextBox HorizontalAlignment="Left" FontSize="40" Name="yearsTextBox" Height="65" Margin="825,350,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
		<TextBox HorizontalAlignment="Left" FontSize="40" Name="monthsTextBox" Height="65" Margin="825,430,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
		<TextBox HorizontalAlignment="Left" FontSize="40" Name="annualInterestRateTextBox" Height="65" Margin="825,510,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
		<TextBox HorizontalAlignment="Left" FontSize="40" Name="monthlyInterestRateTextBox" Height="65" Margin="825,595,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
		<TextBox HorizontalAlignment="Left" FontSize="40" Name="monthlyRepaymentTextBox" Height="65" Margin="825,680,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
        <Button Content="Calculate" FontSize="50" Name="calculateButton" Background="Orange" Height="95" Margin="825,805,0,0" VerticalAlignment="Top" Width="300" Click="calculateButton_Click"/>
        <Button Content="Exit" FontSize="60" Name="exitButton" Background="Orange" Height="95" Margin="1156,805,0,0" VerticalAlignment="Top" Width="269" Click="exitButton_Click"/>


    </Grid>
</Page>
